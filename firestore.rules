rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Pozwól tylko zalogowanym użytkownikom na odczyt danych
      allow read: if request.auth != null;
      // Pozwól tylko właścicielowi dokumentu na jego modyfikację
      allow write: if request.auth != null; 
      //Pozwól nie zarejestrowanemu użytkownikowi na pobranie signUpEmail jeśli mail który wpiszę istnieje
      allow get: if resource.data.signUpEmail != null;
    }

    // Użytkownik może odczytywać i zapisywać tylko swoje dane w workspaces
    match /users/{userId}/workspaces/{workspaceId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Użytkownik może odczytywać i zapisywać projekty w swoich workspace'ach
    match /users/{userId}/workspaces/{workspaceId}/projects/{projectId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Przykład dla zadań
    match /users/{userId}/workspaces/{workspaceId}/projects/{projectId}/tasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Przykład dla podzadań
    match /users/{userId}/workspaces/{workspaceId}/projects/{projectId}/tasks/{taskId}/subtasks/{subtaskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Dodaj regułę pozwalającą na dodawanie nowych projektów
    match /users/{userId}/workspaces/{workspaceId}/projects/{projectId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    match /workspace/{documentId} {
    allow read, write, delete, update: if request.auth != null }
    
    match /user2workspace/{documentId} {
    allow read, write, delete, update: if request.auth != null;
    }
  }
}
